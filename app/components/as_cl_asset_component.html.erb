<% if @model.present? && asset.attached? %>

  <%= cl_image_tag asset.key, {
    crop: :fit,
    gravity: :center,
    width: asset_meta(:desktop).width,
    height: asset_meta(:desktop).height,
    class: @class_name
  }.merge(style: @style)
  %>

<% elsif @fallback.present? %>

  <%= image_tag @fallback, class: @class_name %>

<% end %>
