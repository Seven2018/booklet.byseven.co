<div data-controller="trix">
  <input
    type="hidden"
    id="<%= @rand_uuid %>"
    value="<%= @value %>"
    data-trix-target="input"
    data-untouched-value="<%= @value %>"
    name="<%= @name %>"
  >
  <trix-editor
    data-action="window@trix-initialize->trix#setup keyup->trix#update"
    data-trix-target="editor"
    data-direct-upload-url="<%= rails_direct_uploads_url %>"
    data-blob-url-template="<%= rails_service_blob_url(filename: ':filename', signed_id: ':signed_id') %>"
    class='<%= @klasses %>'
    input="<%= @rand_uuid %>"
    placeholder="<%= @placeholder %>"
  ></trix-editor>
</div>
