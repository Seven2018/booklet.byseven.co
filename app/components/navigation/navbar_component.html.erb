  <div>
    <div class="flex-row-between-centered">


      <%= render_component NavbarAppMenuComponent.new(user: @user, color: 'bkt-dark-grey', hover_background_color: 'bkt-bg-light-grey8-hover') %>

      <%= render_component NavbarUserProfileComponent.new(user: @user) %>

    </div>
  </div>

</div>

<% if @multi_step_form_navbar_content.present? %>
  <div class="navbar-admin">

    <div class="pos-abs"
         style="top: 1.75rem; left: 2rem;">
      <%= render_component Buttons::BackButton.new(fallback: campaigns_path) %>
    </div>

    <div class="navbar-admin__button">
      <h4><%= @multi_step_form_navbar_content %></h4>
    </div>

  </div>
<% end %>
