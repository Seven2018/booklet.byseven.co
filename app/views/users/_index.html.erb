<div class="container-seven container-seven-centered">
  <div id='client-company-index'>
    <div id="index-controls">
      <h3>Users list</h3>
      <div id="index-buttons">
        <%= simple_form_for :search, url: users_path, method: 'GET' do |f| %>
          <%= f.input :name, placeholder: 'Search', label: false %>
          <% if params[:search] %>
            <%= link_to users_path, class: 'user-search-close' do %>
              <i class="far fa-times-circle"></i>
            <% end %>
          <% end %>
        <% end %>
        <% if ['Super Admin', 'Admin', 'HR'].include? current_user.access_level %>
          <%= link_to new_user_path do %>
            <button class="btn btn-edit">New User</button>
          <% end %>
        <% end %>
      </div>
    </div>
    <ul class="users-list">
      <% @users.each do |user| %>
        <li>
          <%= link_to user_path(user) do %>
            <div class="user-index-card">
              <img class='user-picture-index' src='<%= "#{user.picture}" %>' onerror="this.onerror=null;this.src='https://i0.wp.com/rouelibrenmaine.fr/wp-content/uploads/2018/10/empty-avatar.png';">
              <div class="user-infos">
                <p><%= "#{user.firstname} #{user.lastname}" %></p>
                <p><%= user.email %></p>
                <p><%= user.job_description %></p>
                <p><%= user.access_level %></p>
              </div>
            </div>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
