
<div class="border-bottom-bkt-light-grey fs-1_6rem pb-2 my-3 bkt-dark-grey">
  Choose a campaign name
</div>

<div class="py-4">
  <%= text_field_tag :title, campaign.title, placeholder: 'Enter name', class: 'border-bkt-light-grey bkt-bg-light-grey3 rounded-5px py-3 px-3 w-100' %>
  <%= hidden_field_tag :owner_id, current_user.id %>
</div>

<div class="my-5"></div>

<div class="border-bottom-bkt-light-grey fs-1_6rem pb-2 my-3 bkt-dark-grey">
  Choose a campaign type
</div>

<div class="d-flex gap-1rem w-100" style='max-width: 500px;'>

  <%= render_component RadioButtonTileComponent.new(
    model: :kind,
    name: :one_to_one,
    checked: campaign.kind == :one_to_one.to_s || campaign.kind.nil?,
    icon_klasses: "fas fa-check",
    title: "1 to 1",
    subtitle: "Interviewer and interviewee will be able to answer question during a campaign"
  ) %>

  <%= render_component RadioButtonTileComponent.new(
    model: :kind,
    name: :feedback_360,
    checked: campaign.kind == :feedback_360.to_s,
    icon_klasses: "fas fa-rocket",
    title: "Feedback 360",
    subtitle: "Each participant can receive feedbacks from other users.",
    disabled: true
  ) %>

</div>
