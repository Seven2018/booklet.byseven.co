<div class="modal-content">
  <div class="modal-header">
    <div id="modal-title" style="display:flex;justify-content:center;text-align:center;">
      <h3 class="modal-title" id="myModalLabel">Confirm Presence</h3>
    </div>
    <button type="button" class="btn btn-edit-icon" data-dismiss="modal" aria-label="Close"><i class="fas fa-times"></i></button>
  </div>
  <div class="modal-body" id="modalNewBookinBody" style='display:flex;flex-direction:column;align-items:center;'>
    <%= simple_form_for :confirm_presence, url: mark_as_completed_attendees_path do |f| %>
      <div style=" display:flex;justify-content:space-between;flex-direction:column;">
        <%= collection_check_boxes(:training_workshop, :user_ids, User.joins(:attendees).where(attendees: {training_workshop_id: training_workshop.id}), :id, :fullname) do |b| %>
          <%= b.label class: 'label-checkbox', style: 'color:black;' do %>
            <%= b.check_box + b.text %>
          <% end %>
        <% end %>
      </div>
      <div style="display:flex;justify-content:center;margin-top:30px;">
        <%= button_tag :submit, name: 'training_workshop_id', value: "#{training_workshop.id}", class: 'btn btn-edit-green btn-edit-icon' do %>
          <i class="fas fa-save"></i>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

