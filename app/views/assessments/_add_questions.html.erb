<%= simple_form_for AssessmentQuestion.new, url: add_questions_assessment_path(form), method: :post, remote: true do |f| %>
  <div class='mod-assessment-questions-form'>
    <%= f.input :question, as: :text, id: "ckeditor#{form.assessment_questions.count}" %>
    <div class='mod-assessment-questions-options-mcq'>
      <div class='flex-column-between-left'>
      </div>
      <a href="javascript:;" class='addOption btn btn-edit-white' onclick="addAnswer(this);">Add Option</a>
    </div>
    <div class="hidden" id="add_options_form">
      <%= label_tag 'Option' %>
      <%= text_field_tag 'options[]' %>
      <%= label_tag 'Correct Answer' %>
      <%= check_box_tag 'test[]', true, false, class: 'checkbox' %>
      <%= hidden_field_tag 'answer[]', false %>
      <script>
        $('input[type="checkbox"]').on('change', function(e){
              if($(this).prop('checked'))
              {
                  $(this).next().val(true);
              } else {
                  $(this).next().val(false);
              }
        });
      </script>
    </div>
  </div>
  <div style=" display: flex; justify-content: flex-start;margin-top:3rem;">
    <%= button_tag type: 'submit', class: 'btn btn-edit-green btn-icon' do %>
      <i class="fas fa-save"></i>
    <% end %>
    <div class="btn btn-edit-red btn-icon btn-close" onclick="removeQuestion(this)">
      <i class="fas fa-times"></i>
    </div>
  </div>
<% end %>

<script>
  $('input[type="checkbox"]').on('change', function(e){
        if($(this).prop('checked'))
        {
            $(this).next().val(1);
        } else {
            $(this).next().val(0);
        }
});
</script>
