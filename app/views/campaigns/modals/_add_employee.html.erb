<div class="modal-content action-modal__content"
     data-controller="tools--multi-step-form">

  <div class="modal-header action-modal__header">

    <h3 class="modal-title action-modal__title">Add participant</h3>

    <button type="button"
            class="action-modal__close"
            data-dismiss="modal"
            aria-label="Close"
            data-action="click->tools--multi-step-form#reset">
      <span aria-hidden="true" class="action-modal__close-icon">&times;</span>
    </button>

  </div>

  <%= simple_form_for :interview_set, url: campaigns_interview_sets_path, method: :post do |f| %>

    <%= f.hidden_field :campaign_id, value: campaign.id %>

    <div id="step-1"
         class="step">

      <div class="modal-body action-modal__body width-50rem height-14rem overflow-y-visible">

        <p class="fs-1_6rem font-weight-600 bkt-dark-grey mb-1rem">Choose the employee you wish to add:</p>

        <%= render_component(Tools::SelectAutocompleteComponent.new(path: users_search_path,
                                                                    additional_params: "not_campaign_id=#{campaign.id}",
                                                                    width: '100%',
                                                                    menu_max_height: '22rem',
                                                                    placeholder: 'Select an employee',
                                                                    input_name: "interview_set[user_id]",
                                                                    data_action_select: 'click->tools--multi-step-form#allowNextStep')) %>

      </div>

      <div class="modal-footer action-modal__footer">

        <a class="button-next bkt-btn-blue width-100 disabled"
           data-action="click->tools--multi-step-form#nextStep"
           disabled>
          Continue
        </a>

      </div>

    </div>

    <div id="step-2"
         class="step d-none">

      <div class="modal-body action-modal__body width-50rem height-14rem overflow-y-visible">

        <p class="fs-1_6rem font-weight-600 bkt-dark-grey mb-1rem">Choose an interviewer from this campaign</p>

        <%= render_component(Tools::SelectAutocompleteComponent.new(path: users_search_path,
                                                                    additional_params: "campaign_id=#{campaign.id}&manager=true",
                                                                    width: '100%',
                                                                    menu_max_height: '22rem',
                                                                    placeholder: 'Select an interviewer',
                                                                    input_name: "interview_set[interviewer_id]",
                                                                    data_action_select: 'click->tools--multi-step-form#allowNextStep')) %>

      </div>


      <div class="modal-footer action-modal__footer">

        <%= f.submit 'Add employee', class: 'button-next disabled bkt-btn-blue width-100', disabled: true %>

      </div>

    </div>


  <% end %>

</div>
