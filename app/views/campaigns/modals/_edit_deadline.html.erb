<div class="modal-content date-modal__content">

  <div class="modal-header date-modal__header">

    <h3 class="modal-title date-modal__title">Edit interview date</h3>

    <button type="button" class="date-modal__close" data-dismiss="modal" aria-label="Close">
      <span aria-hidden="true" class="date-modal__close-icon">&times;</span>
    </button>

  </div>

  <div class="modal-body date-modal__body">

    <%= simple_form_for :edit_date, url: campaign_edit_date_path, method: :get do |f| %>
      <%= f.hidden_field :campaign_id, value: campaign.id %>
      <%= f.hidden_field :employee_id, value: employee.id %>
      <%= f.input :date, as: :string, label: false, input_html: { class: 'datepicker-inline hidden', value: interview.date, onchange: 'selectInterviewDate(this);' } %>
      <%= f.submit '', class: 'hidden-submit hidden' %>
    <% end %>

  </div>

</div>
