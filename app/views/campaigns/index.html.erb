<div class="campaigns-index-container">
  <div class="campaigns-index">
    <div class="campaigns-index__controls">
      <div class="campaigns-index__title-tags">
        <h1>Campaigns</h1>
        <div class="campaigns-index__tags">
          <p class='campaigns-index__tag'>All</p>
        </div>
      </div>

      <% if CampaignPolicy.new(current_user, nil).create? %>
        <%= link_to edit_campaign_draft_settings_path, class: 'bkt-btn-blue', data: {
          handle: 'create-campaign-cta'
        } do  %>
          <i class="fas fa-plus"></i>
          &nbsp;
          Create Campaign
        <% end %>
      <% end %>
    </div>

    <div class="campaigns-index__main">

      <div id="searchbar"
           class="campaigns-index__searchbar"
           data-controller='change-page remember-search'>

        <i class="fas fa-search campaigns-index__search-trainings-icon"></i>

        <%= simple_form_for(:search, url: campaigns_path, method: :get, remote: true,
          data: {
            remember_search_key_value: 'bookletCampaignsSearches',
          }
          )do |f| %>

          <%=
            f.input(
              :title,
              placeholder: 'Search by title, job ...',
              input_html: {
                class: 'mr-3',
                autocomplete: 'off',
                onkeyup: 'resetPage(this);',
                data: {
                  remember_search_target: :search,
                  action: 'keyup->remember-search#storeSearch'
                }
              },
              label: false,
              required: false
            )
          %>

          <%= f.input :period, collection: ['Current', 'Completed', 'All'], label: false, required: false, selected: 'Current', input_html: {onchange: 'resetPage(this);'} %>

          <%= f.hidden_field :tags %>
          <%= f.hidden_field :page, value: '1', data: { change_page_target: :pageInput } %>

          <%=
            f.submit(
              'Search',
              class: 'btn-search',
              onclick: "document.querySelector('body').classList.add('wait');",
              data: {
                remember_search_target: :submit,
                change_page_target: :submit
              }
            )
          %>

          <button type='submit' class="btn-search btn-search--mobile">
            <i class="fas fa-search"></i>
          </button>

        <% end %>

        <button class='btn-reset bkt-blue'
                data-action="click->remember-search#resetAllFilter">
          Reset
        </button>

        <div
          class="width-100 position-relative"
          data-controller="campaign-tag-filter"
          data-company-tags="<%= @company_tags.join(',') %>"
          data-path="<%= campaigns_path %>"
        >
          <div class="flex-row-end-centered">
            <button data-action="click->campaign-tag-filter#displayList" class="flex-row-between-centered bkt-blue px-3 py-2 bkt-box-shadow-medium">
              <span class="iconify m-2" data-width="20" data-height="20" data-icon="fluent:filter-28-filled"></span>
              <p>Filter</p>
            </button>
          </div>
          <div
            data-campaign-tag-filter-target="tagList"
            data-action="click->campaign-tag-filter#stopPropagation"
            class="d-none position-absolute z-index-50 right-0 width-35rem bkt-box-shadow-medium bkt-bg-white max-h-40rem overflow-y-auto">
            <div class="pl-3 my-4"><p class="bkt-light-grey">Filter by template tags</p></div>
            <div data-campaign-tag-filter-target="selectedTagsDom" class="pl-3 my-4"><p class="">Empty</p></div>
            <div class="pl-3 my-4"><input data-action="keyup->campaign-tag-filter#search" type="text" placeholder="Search" class="rounded-5px pl-2rem"></div>
            <div data-campaign-tag-filter-target="unselectedTagsDom" class="pl-3 py-4 border-top">
              <% @company_tags.each do |tag| %>
                <div class="flex-row-start-centered bkt-light-grey-placeholder" >
                  <button class="d-inline-block bkt-bg-light-blue p-3 m-2 font-weight-600 rounded-2px fs-1_2rem" data-action="click->campaign-tag-filter#toggleTag">
                    <%= tag %>
                  </button>
                </div>
              <% end %>
            </div>
          </div>
        </div>

      </div>

      <div class="campaigns-index__list">
        <div class="campaigns-index__list-headers">
          <p>Campaign title</p>
          <p>Campaign Type</p>
          <p>Tags</p>
          <p class='campaigns-index__list-headers-employee'>Employees</p>
          <p class='campaigns-index__list-headers-completion'>Completion</p>
        </div>
        <div class="campaigns-index__list-lines">
          <%= render 'campaigns/index/index_campaigns_list', campaigns: @campaigns %>
        </div>
      </div>

    </div>

  </div>
</div>


