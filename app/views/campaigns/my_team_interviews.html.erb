<div class="campaigns-my-interviews__container">
  <div class="campaigns-my-interviews__main">

    <div class="flex-row-between-centered rounded-30px bkt-bg-white bkt-box-shadow mb-5rem overflow-hidden">

      <div class='p-2rem'>
        <h1 class='fs-2_4rem font-weight-700 mb-2rem'><%= t 'campaigns.my_interviews.hello', name: current_user.firstname %></h1>
        <p class='fs-1_4rem font-weight-500 bkt-dark-grey line-height-2rem'>
          <%= raw t('campaigns.my_interviews.sub_hello', interviews_to_fill: @interviews_to_fill_count, ongoing_campaigns: @interviews_completed_count) %>
        </p>
      </div>

      <%= render_component AsClAssetComponent.new(
        model: current_user.company,
        asset: :my_team_interviews_bg_picture,
        style: 'object-fit: cover; width: 50%; height: 30rem;',
        class_name: 'd-none d-sm-flex'
      ) %>

    </div>

    <div class="flex-row-start-centered height-2_4rem-forced width-100 mb-2rem border-bottom-bkt-light-grey5-0_5px">

      <%= link_to my_team_interviews_path(period: 'current'), class: "interviews-tab-control flex-row-start-centered height-2_4rem-forced mr-1rem pb-0_75rem z-index-5 cursor-pointer #{'active' unless params[:period] == 'completed'}" do %>
        <p class="fs-1_6rem font-weight-500"><%= t('campaigns.my_interviews.ongoing_interviews') %></p>
        <div class="interviews-tab-control__counter flex-row-center-centered height-2rem width-2rem rounded-10px ml-0_75rem">
          <p class="fs-1rem font-weight-600"><%= @ongoing_campaigns.count %></p>
        </div>
      <% end %>

      <%= link_to my_team_interviews_path(period: 'completed'), class: "interviews-tab-control flex-row-start-centered height-2_4rem-forced mr-1rem pb-0_75rem z-index-5 cursor-pointer  #{'active' if params[:period] == 'completed'}" do %>
        <p class="fs-1_6rem font-weight-500"><%= t('campaigns.my_interviews.completed_interviews') %></p>
        <div class="interviews-tab-control__counter flex-row-center-centered height-2rem width-2rem rounded-10px ml-0_75rem">
          <p class="fs-1rem font-weight-600"><%= @completed_campaigns.count %></p>
        </div></p>
      <% end %>

    </div>

    <div class="campaigns-my-interviews__tabs-display">
      <div class="campaigns-my-interviews__list campaigns-my-interviews__list-crossed">
        <%= render 'campaigns/my_interviews/my_team_interviews_interviews_list', campaigns: @campaigns %>
      </div>
    </div>
  </div>
</div>

<div class='modal fade' id='interview-status-info' tabindex='-1' role='dialog' aria-labelledby='myModalLabel' data-keyboard="false">
  <div class='modal-dialog modal-content bkt-bg-white rounded-5px py-5' role='document' >
    <div class="flex-row-end-centered">
      <button class=" font-weight-500 mr-5 mb-5 fs-2rem" data-dismiss="modal" aria-label="Close">
        <span class="iconify" data-icon="akar-icons:cross"></span>
      </button>
    </div>
    <div class="flex-row-center-centered">
      <span class="iconify" data-icon="noto:light-bulb" data-width="70" data-height="70"></span>
    </div>
    <div class="flex-row-center-centered text-center my-4 font-weight-600">
      <p><%= raw t('campaigns.my_interviews.popup_status_info') %></p>
    </div>
    <div class="flex-row-center-centered text-center my-4 d-block">
      <p><%= t('campaigns.my_interviews.popup_status_subtitle') %></p>
    </div>
    <div class="width-30 m-auto mb-4">
      <p class="flex-row-start-centered"><span class="h-2.5 w-2.5 inline-block mr-3 bkt-bg-light-grey"></span> <%= t('campaigns.my_interviews.popup_status_not_available') %></p>
      <p class="flex-row-start-centered"><span class="h-2.5 w-2.5 inline-block mr-3 bkt-bg-red"></span> <%= t('campaigns.my_interviews.popup_status_not_started') %></p>
      <p class="flex-row-start-centered"><span class="h-2.5 w-2.5 inline-block mr-3 bkt-bg-yellow"></span> <%= t('campaigns.my_interviews.popup_status_in_progress') %></p>
      <p class="flex-row-start-centered"><span class="h-2.5 w-2.5 inline-block mr-3 bkt-bg-green"></span> <%= t('campaigns.my_interviews.popup_status_submitted') %></p>
    </div>
  </div>
</div>