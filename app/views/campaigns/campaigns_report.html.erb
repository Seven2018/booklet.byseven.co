<div style='display: flex; justify-content: center; align-items: center; flex-direction: column;'>
  <%# form %>
  <div>
    <%= simple_form_for CsvExport.new, url: companies_csv_exports_path do |f| %>
      <%= f.hidden_field :company_id, value: @company.id %>
      <%= f.hidden_field :creator_id, value: current_user.id %>

      <%= f.input :mode,
        collection: CsvExport::modes.keys,
        as: :radio_buttons,
        input_html: {
          onclick: 'selectAnalytics(this);',
          style: 'margin-top: 0;'
        }
      %>

      <%= f.input :tag_category_id,
        collection: @company.tag_categories.order(position: :asc),
        as: :radio_buttons,
        input_html: {
          onclick: 'selectAnalytics(this);',
          style: 'margin-top: 0;'
        }
      %>

      <%= f.input :start_time,
        input_html: {
          class: 'datepicker-defaulting-to-now',
        },
        as: :date,
        html5: true,
        placeholder: 'Select date'
      %>

      <%= f.input :end_time,
        input_html: {
          class: 'datepicker-defaulting-to-end-of-year',
        },
        as: :date,
        html5: true,
        placeholder: 'Select date'
      %>

      <%= f.submit 'generate', class: 'btn-blue__white-border' %>
    <% end %>
  </div>

  <%# csv_exports %>
  <div style="margin-top: 20px;">
    <h3>Csv Exports</h3>
    <% @company.csv_exports.order(created_at: :desc).each do |csv_export| %>
      <div>
        <%= csv_export.filename %>
        <strong>
          (<%= csv_export.state %>)
        </strong>
        <% unless csv_export.processing? %>

          <%= link_to companies_csv_export_path(csv_export, format: :csv), class: 'mx-2' do %>
            <i class="fas fa-file-csv"></i>
          <% end %>

          <%= link_to companies_csv_export_path(csv_export, format: :xlsx), class: 'mx-2' do %>
            <i class="fas fa-file-excel"></i>
          <% end %>

          <%=
            link_to(
              companies_csv_export_path(csv_export, format: :csv),
              method: :delete,
              data: {
                confirm: 'Etes vous sÃ»r(e) ?'
              }
            ) do
          %>
            <i class="fas fa-times text-danger"></i>
          <% end %>
        <% end %>
      </div>
    <% end %>

    <% unless @company.csv_exports.any? %>
      Aucun export pour le moment!
    <% end %>
  </div>
</div>





