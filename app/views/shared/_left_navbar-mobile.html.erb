<div class="left-navbar-mobile">
  <div class="left-navbar-middle-mobile">
    <% if user_signed_in? %>
      <%= link_to dashboard_path, class: 'left-buttons-mobile' do %>
        <div class="left-menu-list-mobile">
          <i class="fas fa-home"></i>
        </div>
      <% end %>
      <%= link_to dashboard_calendar_week_path, class: 'left-buttons-mobile' do %>
        <div class="left-menu-list-mobile" id='leftmenu'>
          <i class="far fa-calendar-alt"></i>
        </div>
      <% end %>
      <%= link_to catalogue_path, class: 'left-buttons-mobile' do %>
        <div class="left-menu-list-mobile">
          <i class="fas fa-book"></i>
        </div>
      <% end %>
      <%= link_to organisation_path, class: 'left-buttons-mobile' do %>
        <div class="left-menu-list-mobile">
          <i class="fas fa-users"></i>
        </div>
      <% end %>
    <% end %>
    <div class="left-buttons-mobile">
      <div class="left-navbar-top-mobile">
        <% if user_signed_in? %>
          <img src='<%= "#{current_user.picture}" %>' class="avatar-mobile dropdown-toggle" id="navbar-wagon-menu" data-toggle="dropdown">
        <% end %>
        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <% if user_signed_in? %>
            <li><%= link_to "Profile", user_path(current_user) %></li>
          <% end %>
          <li>
            <%= link_to "Log out", destroy_user_session_path, method: :delete %>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>

