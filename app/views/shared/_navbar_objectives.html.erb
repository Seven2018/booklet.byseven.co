<div class="d-flex justify-content-center align-items-center px-2rem">

  <%= image_tag 'icons/roadmaps.svg', style: 'height: 22px;' %>
  <p class="fs-2rem font-weight-500 bkt-dark-grey ml-1rem">Roadmaps</p>

</div>

<div class="height-3rem border-bkt-dark-grey"></div>

<div class="d-flex justify-content-start align-items-center px-1rem">

  <% if Objective::ElementPolicy.new(current_user, nil).my_objectives? %>

    <%= link_to objective_my_objectives_path, class: "navbar-buttons width-13rem #{'navbar-buttons--active' if @controller_action == :elements_my_objectives}" do %>

      <h4>My objectives</h4>

    <% end %>

  <% end %>

  <% if Objective::ElementPolicy.new(current_user, nil).my_team_objectives? %>

    <%= link_to objective_my_team_objectives_path, class: "navbar-buttons width-17rem #{'navbar-buttons--active' if @controller_action == :elements_my_team_objectives}" do %>

      <h4>My team objectives</h4>

    <% end %>

  <% end %>

</div>
