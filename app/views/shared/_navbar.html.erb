<div class="navbar navbar-expand-sm navbar-light">
  <div id="navbar-search">
    <% if params[:action] == 'organisation' %>
      <%= simple_form_for :search, url: organisation_path, method: 'GET' do |f| %>
        <% if params[:search] %>
          <%= f.input :name, placeholder: params[:search][:name], label: false %>
          <%= link_to organisation_path, class: 'search-close' do %>
            <i class="far fa-times-circle"></i>
          <% end %>
        <% else %>
          <%= f.input :name, placeholder: 'Search', label: false %>
        <% end %>
      <% end %>
    <% elsif params[:action] == 'catalogue' %>
      <%= simple_form_for :search, url: catalogue_path, method: 'GET' do |f| %>
        <% if params[:search] %>
          <%= f.input :title, placeholder: params[:search][:title], label: false %>
          <%= link_to catalogue_path, class: 'search-close' do %>
            <i class="far fa-times-circle"></i>
          <% end %>
        <% else %>
          <%= f.input :title, placeholder: 'Search', label: false %>
        <% end %>
      <% end %>
    <% end %>
  </div>
  <div class="navbar-controls-right flex-row-between-centered">
    <% if ['Super Admin', 'Admin', 'HR', 'Manager'].include?(current_user.access_level) %>
      <div class="centered-item dropdown">
        <button class="btn btn-edit-navbar dropdown-toggle" type="button" id="dropdownMenuNavbar" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <div class="flex-row-between-centered">
            <i class="fas fa-plus"></i>
            <p>New</p>
          </div>
        </button>
        <div class="dropdown-menu dropdown-menu-new" aria-labelledby="dropdownMenuNavbar">
          <%= link_to 'Program', new_training_program_path, class: 'dropdown-item' %>
          <%= link_to 'Workshop', new_workshop_path, class: 'dropdown-item' %>
        </div>
      </div>
    <% end %>
    <div class="dropdown show">
      <a class="navbar-icon dropdown-toggle dropdown-notification-menu" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fas fa-bell"></i></a>
      <div class="dropdown-menu dropdown-menu-notification" id='dropdown-notification-list' aria-labelledby="dropdownMenuLink">
        <%= render 'shared/notifications' %>
      </div>
    </div>
  </div>
</div>
