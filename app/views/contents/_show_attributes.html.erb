<%= simple_form_for content do |f| %>
  <div class="content-show-infos" onclick="openInput(this);">
    <p><%= content.title %></p>
    <div class="content-show-input hidden">
      <%= f.input :title, label: false, input_html: { autocomplete: "off" } %>
    </div>
  </div>
  <div class="flex-row-between-centered">
    <div class="content-show-infos">
      <p>Duration: <%= content.duration %> min</p>
      <div class="content-show-input hidden">
        <%= f.input :duration, label: false, min: 0, input_html: { autocomplete: "off" } %>
      </div>
    </div>
    <div class="content-show-infos">
      <% content.categories.each do |category| %>
        <p><%= category.title %></p>
      <% end %>
    </div>
  </div>
  <div class="content-show-infos">
    <p>Objectives :</p>
    <br>
    <p><%= content.description %></p>
    <div class="content-show-input hidden">
      <%= f.rich_text_area :description, label: false, input_html: { autocomplete: "off" } %>
    </div>
  </div>
  <%= f.input :content_type, as: :radio_buttons, collection: [['Synchronous', 'Synchronous'], ['Asynchronous', 'Asynchronous']], label_method: :second, value_method: :first, legend_tag: false %>
<% end %>
