<% if ['Super Admin'].include?(current_user.access_level) || (@content.company_id == current_user.company_id) %>
  <% access = 'granted' if ['Super Admin', 'Account Owner', 'HR'].include?(current_user.access_level) %>
  <div id="content-show-title">
    <h2 class="d-flex align-items-center"><i class="far fa-file workshop-title"></i></i><%= @content.title %></h2>
  </div>
  <div id="content-show-container">
    <div id="content-show-container-left">
      <%= render 'contents/partials/show_summary', content: @content, page: 'show', access: access %>
    </div>
    <div id="content-show-container-right">
      <div class="content-add">
        <div class="content-center-div">
          <div class="content-show-attributes-center">
            <%= render 'contents/partials/show_attributes_center', content: @content, page: 'show', access: access %>
          </div>
          <div class="content-show-mods-edit-mode">
            <%= render 'mods/partials/content_show_mods_index', content: @content, page: 'show', access: access %>
          </div>
        </div>
        <div class="content-add-right">
          <div class="content-show-attributes-right">
            <%= render 'contents/partials/show_attributes_right', content: @content, page: 'show', access: access %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% else %>
  <div class="access-restricted centered-item">
    <h1>Access restricted</h1>
  </div>
<% end %>
