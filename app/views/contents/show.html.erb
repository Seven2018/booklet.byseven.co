<div id="content-show-container">
  <div id="content-show-container-left">
    <%= render 'contents/show_anchors', content: @content, page: 'show' %>
  </div>
  <div id="content-show-container-right">
    <div class="content-add">
      <div class="content-add-left">
        <div class="content-show-attributes-left">
          <%= render 'contents/show_attributes_left', content: @content, page: 'show' %>
        </div>
        <div class="content-show-mods-edit-mode">
          <%= render 'mods/content_show_mods_index', content: @content, page: 'show' %>
        </div>
      </div>
      <div class="content-add-right">
        <div class="content-show-attributes-right">
          <%= render 'contents/show_attributes_right', content: @content, page: 'show' %>
        </div>
      </div>
    </div>
  </div>
</div>
