    <p>Workshop</p>
    <%= link_to edit_content_path(content) do %>
      <div class="centered-item height-2_5rem width-2_5rem">
        <span class="iconify fs-2_4rem bkt-orange" data-icon="ci:edit"></span>
      </div>
    <% end %>
