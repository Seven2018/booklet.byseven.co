if ('<%= @modal %>' == 'true') {
  document.querySelector('#addTheme').querySelector('.modal-dialog').innerHTML = '<%= j render("contents/manage_categories", content: @content) %>';
} else {
  document.querySelector('.content-show-attributes').innerHTML = '<%= j render("contents/show_attributes", content: @content) %>';
}
