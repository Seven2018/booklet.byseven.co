<div class="modal-content">
  <div class="modal-header">
    <div id="modal-title" style=" display: flex; justify-content: space-between;">
      <h3 class="modal-title" id="myModalLabel"><%= "Create a training for '#{training_program.title}'" %></h3>
    </div>
    <button type="button" class="btn btn-edit-icon" data-dismiss="modal" aria-label="Close"><i class="fas fa-times"></i></button>
  </div>
  <div class="modal-body" id="modalNewBookinBody">
    <%= simple_form_for @training do |f| %>
      <%= f.input :title, input_html: {value: training_program.title} %>
      <%# f.input :participant_number, input_html: {value: training_program.participant_number} %>
      <%= f.input :participant_number, label: 'Max number of participants (optional)', input_html: {value: nil} %>
      <div style=" display: flex; justify-content: space-between;margin-top:3rem;">
        <%= button_tag type: 'submit', name: 'training_program_id', value: "#{training_program.id}", class: 'btn btn-edit-green btn-edit-icon' do %>
          <i class="fas fa-save"></i>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
