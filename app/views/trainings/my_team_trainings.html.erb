<div class="my-team-trainings__container">
  <div class="my-team-trainings__main">

    <div class="my-team-trainings__banner">
      <h1>Hello, <%= "#{@current_user.firstname}" %> !</h1>
      <p>Welcome to My Team Trainings section, your team have <%# "team trainings count" %> trainings to do and/or validate, please see them below. </p>
    </div>



    <div class="my-team-trainings-card-list">

      <% @future_trainings.each do |user_id, trainings| %>
        <% user = User.find(user_id) %>

        <div class="my-team-trainings-card-content">
          <div class="my-team-trainings-card__left">
            <div class="my-team-trainings-card__left-avatar">
              <img src="<%= user.picture %>" alt="<%= user.fullname %>" class='avatar-md' onerror='this.onerror=null;this.src="<%= asset_url('empty-avatar.png', type: :image) %>";'>
            </div>
            <div class="my-team-trainings-card__left-fullname-job">
              <div class="my-team-trainings-card-fullname"> <%= user.fullname %></div>
              <div class="my-team-trainings-card-job"><em><%= user.job_title %></em></div>
            </div>
          </div>
          <div class="my-team-trainings-card__middle">
            <div class="my-team-trainings-card__middle-status-trainings">
              <p><%= trainings.count %> trainings in progress</p>
            </div>
            <div class="my-team-trainings-card__middle-date-next-trainings">
              <p>Next training date : <%= trainings.first.next_date %></p>
            </div>
          </div>
          <div class="my-team-trainings-card__right">
            <%= link_to my_team_trainings_user_details_path(user) do %>
              <div class="my-team-trainings-card__right-link">
                <p class='bkt-orange'>See details <span class="iconify bkt-orange" data-icon="akar-icons:chevron-right"></span></p>
              </div>
            <% end %>
          </div>
        </div>

      <% end %>

    </div>

  </div>
</div>
