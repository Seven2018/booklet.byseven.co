<i class="fas fa-search"></i>
<%= simple_form_for :searching, url: book_path, method: :get do |f| %>
  <%= f.text_field :title, placeholder: 'Search', label: false %>
  <%= f.hidden_field :selected %>
  <%= f.submit 'Search', class: 'btn-search' %>
<% end %>
<% if params[:searching].present? && !params[:searching][:title].blank? %>
  <%= link_to 'Reset', catalogue_path(reset: ""), class: "btn-reset-form" %>
<% end %>
