if ('<%= @all %>' == 'true') {
  document.getElementById('Workshops').innerHTML = '<%= j (render("pages/catalogue_workshops", workshops: Workshop.where(company_id: current_user.company_id).order(title: :asc))) %>';
} else {
  document.getElementById('Workshops').innerHTML = '<%= j (render("pages/catalogue_workshops", workshops: Workshop.joins(:workshop_categories).where(company_id: current_user.company_id, workshop_categories: {category_id: @workshop_categories}).order(title: :asc))) %>';
}
