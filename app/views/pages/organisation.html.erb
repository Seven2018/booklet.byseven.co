<script>
  function clearSearch(element) {
    document.querySelectorAll('#search_name').forEach((el) => {
      el.value = ''
    })
    document.querySelectorAll('#organisation-controls__user-search-clear').forEach((el) => {
      el.classList.add('hidden')
    })
    document.querySelector('.organisation-main-container-unfiltered').classList.remove('hidden')
    document.querySelector('.organisation-main-container-filtered').classList.add('hidden')
  }

