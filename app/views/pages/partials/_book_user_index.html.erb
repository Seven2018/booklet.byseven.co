<% users.each do |user| %>
  <% selected_users = users.map(&:id).join(',') if selected == 'true' %>
  <% if selected == 'false' %>
    <div class="book-users-card user-index-card" id="user-<%= user.id %>" onclick="selectUser(this);">
  <% else %>
    <div class="book-users-card user-index-card-selected" id="user-<%= user.id %>" onclick="selectUser(this);">
  <% end %>
    <% fullname, email = user.fullname, user.email %>
    <% manager = user.manager.present? ? user.manager.fullname : '' %>
    <% if selected_users.split(',').include?(user.id.to_s) %>
      <input type="checkbox" class="book-users-checkbox hidden" id="checkbox-user-<%= user.id %>" checked>
    <% else %>
      <input type="checkbox" class="book-users-checkbox hidden" id="checkbox-user-<%= user.id %>">
    <% end %>
    <div class="book-users-pseudo-checkbox-container"><button class="book-users-pseudo-checkbox"></button></div>
    <div class="book-users-card-infos">
      <div>
        <p data-toggle='tooltip' title='<%= fullname %>'><%= fullname %></p>
      </div>
      <div>
        <p data-toggle='tooltip' title='<%= email %>'><%= email %></p>
      </div>
      <div>
        <p data-toggle='tooltip' title='<%= manager %>'><%= manager %></p>
      </div>
      <% if selected == 'false' %>
        <% user.tags.order(tag_category_position: :asc).each do |tag| %>
          <div>
            <p data-toggle='tooltip' title='<%= tag.tag_name %>'><%= tag.tag_name %></p>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
<% end %>
