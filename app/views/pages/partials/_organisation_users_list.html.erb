<div id="main-page-title" class='employee-tag flex-row-between-centered'>
  <% if @filter_tags.present? %>
    <div class="filter-selected-tags">
      <h1><%= users.count %> result(s) for</h1>
      <% @filter_tags.each do |tag| %>
        <div class="selected-tags" name='<%= tag %>'>
          <p><%= tag %></p>
          <i class="fas fa-times" onclick='removeFilterTag(this);'></i>
        </div>
      <% end %>
    </div>
  <% else %>
    <% if unfiltered.to_s.downcase == 'true' %>
      <h1>Employees (<%= User.where(company_id: current_user.company_id).count %>)</h1>
    <% else %>
      <h1><%= users.length %> result(s)</h1>
    <% end %>
  <% end %>
</div>
<div id="main-controls">
  <div id="organisation-controls__user-search" class="searchbar">
    <% if params[:action] == 'organisation' %>
      <i class="fas fa-search organisation-controls__search-icon"></i>
      <%= simple_form_for :search, url: organisation_path, method: :get, remote: true do |f| %>
        <%= f.text_field :name, placeholder: 'Search by name', label: false, autocomplete: 'off' %>
        <%= f.submit 'Search', class: 'btn-search', onclick: "document.querySelector('body').classList.add('wait');" %>
        <button type='submit' class="btn-search btn-search--mobile" onclick="document.querySelector('body').classList.add('wait');" >
          <i class="fas fa-search"></i>
        </button>
      <% end %>

      <button class='btn-reset' onclick='clearSearch(this)'>Reset</button>
      <button class='btn-reset--mobile btn-reset-blue hidden' onclick='clearSearch(this)'><i class="fas fa-redo-alt"></i></button>
    <% end %>
    <div class="btn-white" onclick='openFilter();'>
      <i class="fas fa-filter"></i>
      <p>Filter</p>
    </div>
  </div>
  <div class="main-controls-buttons">
      <div class="dropdown">
        <div class="btn-white btn-icon dropdown-toggle" id="dropdownMenu" data-toggle="dropdown">
          <i class="fas fa-ellipsis-h"></i>
        </div>
        <ul class="dropdown-menu dropdown-menu-right organisation-dropdown-menu" aria-labelledby="dropdownMenu">
          <li><a data-toggle='modal' data-target='#newUser'>Create new user</a></li>
          <li class="hidden"><a id='organisation-dropdown__create-user-redirect' data-toggle='modal' data-target='#userCreated'>
          <li class='hidden'><%= link_to 'Remove Selected User', unlink_from_company_path(company_id: current_user.company_id, selected_users: ''), id: 'unlink_users', data: {confirm: 'Are you sure you wish to remove the selected users ?'}, remote: true %></li>
          </a></li>
          <% if current_user.admin? %>
            <li><a data-toggle='modal' data-target='#importUsers'>Import Users</a></li>
            <li><a data-toggle='modal' data-target='#exportUsers' id="export-users-modal-link">Export All Users</a></li>
            <li class='hidden'><a id='organisation-dropdown__import-infos-link' data-toggle='modal' data-target='#importUsersInfos'></a></li>
          <% end %>
        </ul>
      </div>
  </div>
</div>
<div class='organisation-page' data-fl-scrolls='{"orientation": "horizontal"}'>
  <div class='organisation-users'>
    <div class='user-index-headers'>
      <%= render 'pages/partials/organisation_headers', users: users %>
    </div>
    <div class='users-index'>
      <% users.each do |user| %>
        <div class='user-index-card user-card-<%= user.id %>'>
          <%= render 'pages/partials/organisation_user_card', user: user %>
        </div>
      <% end %>
    </div>
  </div>
</div>
