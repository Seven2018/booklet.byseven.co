<div class="template-info">
  <% if page == 'edit' %>
    <%= simple_form_for template, remote: true do |f| %>
      <%= f.input :title, input_html: {autocomplete: "off", style:'margin-bottom: 0px;', onclick: 'try{updateContent(this)}catch{}'}, placeholder: 'Untitled' %>
      <%= f.input :description, input_html: {autocomplete: "off", onclick: 'try{updateContent(this)}catch{}',  style: "height: 150px;"} %>
      <%= f.submit '', class: 'hidden-submit hidden' %>
    <% end %>
  <% else %>
    <h2 class="d-flex align-items-center"><%= template.title %></h2>
    <p class="description"><%= template.description %></p>
  <% end %>
  <div class="template-add-right--mobile">
    <div class="template-show-infos-themes">
      <p style='color:#808080;'><b>Tags</b></p>
      <div class="theme-btns">
        <% template.tags.order(tag_name: :asc).group_by(&:tag_category_position).values.flatten.each do |tag| %>
          <p class="category-tag"><%= tag.tag_name %></p>
        <% end %>
        <% if params[:controller] == 'interview_forms' && page == 'edit' %>
          <a data-toggle='modal' data-target='#addTags' data-toggle='tooltip' title='Add Theme' class='add-theme'><i class="fas fa-plus" style='color:#3177B7;'></i></a><br>
        <% end %>
      </div>
    </div>
  </div>
</div>
