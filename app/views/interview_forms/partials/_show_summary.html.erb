<div class='template-summary-container'>
  <div>
    <h3 class='fs-2_4rem font-weight-500 bkt-light-grey'>SUMMARY</h3>
  </div>
  <% template.interview_questions.order(position: :asc).each do |question| %>
    <a href="#anchor-<%= question.id %>">
      <% if question.separator? %>
        <div class='anchor anchor__separator'>
          <p><%= question.question %></p>
        </div>
      <% else %>
        <div class='anchor anchor__no-separator'>
          <p><%= question.question %></p>
        </div>
      <% end %>
    </a>
  <% end %>
</div>

