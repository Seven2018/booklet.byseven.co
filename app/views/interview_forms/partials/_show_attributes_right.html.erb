<div class="template-show-infos-themes">
  <label>Tags</label>
  <div class="tag-btns">
    <% template.tags.order(tag_name: :asc).group_by(&:tag_category_position).values.flatten.each do |tag| %>
      <p class="category-tag"><%= tag.tag_name %></p>
    <% end %>
    <% if params[:controller] == 'interview_forms' && page == 'edit' %>
      <a data-toggle='modal' data-target='#addTags' data-toggle='tooltip' title='Add Theme' class='add-theme'><i class="fas fa-plus" style='color:#3177B7;'></i></a><br>
    <% end %>
  </div>
</div>
<div class="template-show-infos-delete orange">
  <% if ['Super Admin', 'Account Owner', 'HR'].include?(current_user.access_level) && page == 'show' %>
    <%= link_to edit_interview_form_path(template) do %>
      <i class="fas fa-pencil-alt"></i>
    <% end %>
  <% end %>
  <% if ['Super Admin', 'Account Owner', 'HR'].include?(current_user.access_level) && Campaign.where(interview_form_id: template).nil? %>
    <%= link_to interview_form_path(template, page: 'edit'), method: :delete, data: {confirm: 'Are you sure ?'} do %>
      <i class="fas fa-trash-alt"></i>
    <% end %>
  <% end %>
</div>

<script>
  $(function () {
    $('[data-toggle="tooltip"]').tooltip()
  })
</script>
