<% template.tags.order(tag_name: :asc).group_by(&:tag_category_position).values.flatten.each do |tag| %>
  <div class='flex-row-between-centered border-bkt-blue-1px rounded-3px' style='padding: .5rem;'>
    <p class="fs-1_4rem font-weight-600 bkt-blue"><%= tag.tag_name %></p>
    <span class="iconify fs-1_4rem ml-1rem bkt-blue" data-icon="uil:times"></span>
  </div>
<% end %>
