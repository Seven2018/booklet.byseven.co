<div class="mailer-banner">
  <div class="mailer-banner-row">
    <div class="mailer-banner-row-image">
      <%= email_image_tag('Booklet-logo.png') %>
    </div>
  </div>
</div>
<div class="mailer-container">
  <div class="mailer-text">
    <div class="mailer-text-image">
      <%= email_image_tag('noto_person-running.png') %>
    </div>

    <h2>3,2,1 Start !</h2>
    <p>The campaign <%= @interview.campaign.title %> has just begun !</p>
    <p><%= @interviewer.firstname %> <%= @interviewer.lastname %> invites you to complete your interview.</p>
    <br>
    <div class="mailer-button">
      <%= link_to 'Go to My Interviews', my_interviews_url %>
    </div>
    <span>Please do not answer this email</span>
  </div>
</div>
