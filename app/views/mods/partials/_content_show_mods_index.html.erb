              <%= f.input :duration, input_html: {min: 0, onclick: 'saveMod(this)', class:'form-group col'}, label: 'Duration', required: true, value: duration %>
            </div>
          </div>
          <%= f.input :video, placeholder: 'Youtube URL', label: 'Video Link:', value: '', input_html: {onclick: 'saveMod(this)', autocomplete: 'off'} %>
          <%= f.submit '', class: 'hidden-submit hidden' %>
        <% end %>
      </div>
    <% else %>
      <div class="mods">
        <div class="content-show-view-mode-anchor" id="anchor-<%= mod.id %>"></div>
        <div class="form-row mod-type">
          <div class="form-group col-9">
            <h3><strong><%= mod.title %></strong></h3>
