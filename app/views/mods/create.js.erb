document.querySelector('.content-show-mods-index').innerHTML = '<%= j (render("mods/content_show_mods_index", content: @content)) %>';
document.querySelector('#content-show-container-left').innerHTML = '<%= j (render("contents/show_anchors", content: @content)) %>';
document.querySelector('.saved-message').classList.remove('hidden');
setTimeout(function(){document.querySelector('.saved-message').classList.add('hidden') }, 3000);
document.querySelectorAll('#mod_title').forEach((element) =>{
  element.parentNode.parentNode.querySelector('.btn-orange').disabled = true
  element.addEventListener('keyup', event => {
    if (element.value != '') {
      element.parentNode.parentNode.querySelector('.btn-orange').disabled = false
    }
  })
})
