<div id="show-controls" class='flex-row-between-centered'>
  <%= link_to organisation_path, class: 'btn return-arrow' do %><i class='fas fa-arrow-left'></i><% end %>
  <div id='show-buttons'>
    <% if ['Super Admin', 'Admin', 'HR', 'Manager'].include? current_user.access_level %>
      <a data-toggle='modal' data-target='#editTeam'><button class='btn-edit-white btn-edit-icon'><i class='fas fa-pen'></i></button></a>
      <a data-toggle='modal' data-target='#editUserTeams'><button class='btn-edit-white btn-edit-icon'><i class="fas fa-users-cog"></i></button></a>
      <%= link_to team_path(@team), method: :delete, data: { confirm: 'Are you sure ?'} do %>
        <button class='btn-edit-white btn-edit-icon btn-last'><i class="far fa-trash-alt"></i></button>
      <% end %>
    <% end %>
  </div>
</div>
<div id="container-show">
  <h1><%= @team.team_name %></h1>
</div>
<div id="container-show">
  <div class='team-show-users-index'>
    <% if @team.users.present? %>
      <% @team.users.each do |user| %>
        <%= link_to user_path(user) do %>
          <div class='team-show-user-card flex-row-between-centered'>
            <div class="team-show-users-info">
              <img src="<%= user.picture %>" alt="" class='avatar-sm' onerror="this.onerror=null;this.src='https://i0.wp.com/rouelibrenmaine.fr/wp-content/uploads/2018/10/empty-avatar.png';">
            </div>
            <div class="team-show-users-info">
                <p><%= user.fullname %>
            </div>
            <div class="team-show-users-info">
              <p><%= user.email %></p>
            </div>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>


<!-- Modal -->
<div class='modal fade' id='editTeam' tabindex='-1' role='dialog' aria-labelledby='myModalLabel'  data-backdrop="static" data-keyboard="false">
  <div class='modal-dialog' role='document' style='border-radius: 20px'>
    <%= render 'edit', team: @team %>
  </div>
</div>

<div class='modal fade' id='editUserTeams' tabindex='-1' role='dialog' aria-labelledby='myModalLabel'  data-backdrop="static" data-keyboard="false">
  <div class='modal-dialog' role='document' style='border-radius: 20px'>
    <%= render 'user_teams/edit', team: @team %>
  </div>
</div>

<div class="modal fade" id="editImage" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document" style="border-radius: 20px">
    <%= render 'edit_image', team: @team %>
  </div>
</div>
