<div class="modal-content">
  <div class="modal-header">
    <div id="modal-title" style="display:flex;justify-content:center;text-align:center;">
      <h3 class="modal-title" id="myModalLabel"><%= "Skills" %></h3>
    </div>
    <button type="button" class="btn btn-icon btn-reset" data-dismiss="modal" aria-label="Close"><i class="fas fa-times"></i></button>
  </div>
  <div class="modal-body" id="modalNewBookinBody" style='display:flex;flex-direction:column;align-items:center;'>
    <%= simple_form_for [@workshop, @workshop_skill] do |f| %>
      <div id='checkbox' style=" display:flex;justify-content:space-between;flex-direction:column;">
        <% SkillGroup.all.each do |group| %>
          <p><%= group.title %></p>
          <%= collection_check_boxes(:workshop, :skill_ids, Skill.where(skill_group_id: group.id), :id, :title) do |b| %>
            <%= b.label class: 'label-checkbox', style: 'color:black;' do %>
              <%= b.check_box + b.text %>
            <% end %>
          <% end %>
        <% end %>
      </div>
      <script>
        $('#checkbox input:checkbox:checked').parent().toggleClass('checked-box');
        $('#checkbox input:checkbox').change(function () {
          $(this).parent().toggleClass('checked-box');
        });
      </script>
      <div style="display:flex;justify-content:center;margin-top:30px;">
        <%= button_tag :submit, class: 'btn btn-edit-green btn-icon' do %>
          <i class="fas fa-save"></i>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

